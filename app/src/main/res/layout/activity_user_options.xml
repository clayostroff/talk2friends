<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/userProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="User Profile" />

    <Button
        android:id="@+id/meetingManagerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userProfileButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Meeting Manager" />

    <Button
        android:id="@+id/inviteFriendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/meetingManagerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Invite Friend" />

    <!-- New Recommend Friends Button -->
    <Button
        android:id="@+id/recommendFriendsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inviteFriendButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Recommend Friends" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommendFriendsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Logout" />

</RelativeLayout>
