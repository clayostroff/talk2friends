<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addFriendsOptionActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/inviteFriendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Invite Friend" />

    <Button
        android:id="@+id/recommendFriendsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inviteFriendButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Recommend Friends" />

</RelativeLayout>
